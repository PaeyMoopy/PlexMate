# Discord Bot Settings
DISCORD_TOKEN=your_discord_bot_token_here
ALLOWED_CHANNEL_ID=channel_id_where_bot_commands_are_allowed
# Admin channel for management commands (mapping, etc.)
ADMIN_CHANNEL_ID=admin_channel_id_for_bot_management

# Overseerr Settings
OVERSEERR_URL=https://your-overseerr-instance.com
OVERSEERR_API_KEY=your_overseerr_api_key_here
# Format: {"overseerr_id":"discord_id"} - Map Overseerr user IDs to Discord user IDs
OVERSEERR_USER_MAP={"1":"123456789","2":"987654321"}
# Fallback Overseerr user ID to use when no matching Discord user is found
OVERSEERR_FALLBACK_ID=1

# TMDB API Settings
TMDB_API_KEY=your_tmdb_api_key_here

# Webhook Settings
WEBHOOK_PORT=3000

# Tautulli API Settings (for Plex statistics)
TAUTULLI_URL=http://your-tautulli-url:8181
TAUTULLI_API_KEY=your_tautulli_api_key_here

# Sonarr API Settings (TV Show downloads)
SONARR_URL=http://your-sonarr-url:8989
SONARR_API_KEY=your_sonarr_api_key_here

# Radarr API Settings (Movie downloads)
RADARR_URL=http://your-radarr-url:7878
RADARR_API_KEY=your_radarr_api_key_here

# Download Client Settings
# Set to "qbittorrent" or "sabnzbd"
DOWNLOAD_CLIENT=qbittorrent
DOWNLOAD_CLIENT_URL=http://your-download-client-url:8080
DOWNLOAD_CLIENT_USERNAME=your_download_client_username
DOWNLOAD_CLIENT_PASSWORD=your_download_client_password
# Only needed for SABnzbd
DOWNLOAD_CLIENT_API_KEY=your_sabnzbd_api_key

# Dashboard Settings
# Update interval in milliseconds (default: 60000 = 1 minute)
DASHBOARD_UPDATE_INTERVAL=60000
# Number of days to keep statistics data
STATS_RETENTION_DAYS=30
